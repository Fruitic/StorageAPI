<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="api.storage.models.ProductNamesEntity" table="product_names" schema="public" catalog="StorageApiDb">
        <id name="name">
            <column name="name" sql-type="char(50)" length="50"/>
        </id>
    </class>
    <class name="api.storage.models.StorageEntity" table="storage" schema="public" catalog="StorageApiDb">
        <id name="id">
            <column name="id" sql-type="integer"/>
        </id>
        <property name="amount">
            <column name="amount" sql-type="integer"/>
        </property>
        <property name="price">
            <column name="price" sql-type="integer"/>
        </property>
        <property name="date">
            <column name="date" sql-type="date"/>
        </property>
        <many-to-one name="productNamesByName" class="api.storage.models.ProductNamesEntity">
            <column name="name"/>
        </many-to-one>
    </class>
</hibernate-mapping>